#encoding:utf-8

def get_cardfile_dict(item_format,one_line,item_id,is_chance,chance_time):
    values = one_line.split(',')
    keys = item_format.split('&')
    if len(values) != len(keys) or len(values) == 0:
        return None
    item_dict = {"item_id":item_id,"is_change":is_chance,"chance_time":chance_time}
    for i in range(0,len(values)):
        item_dict[keys[i]] = values[i].strip()
    return item_dict
    
def check_cardfile_format(first_line,item_format):
    return (len(first_line.split(",")) == len(item_format.split("&"))) 
